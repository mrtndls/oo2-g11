<hibernate-mapping>
	<class name="datos.Turno" table="turno">
		<id column="idTurno" name="idTurno">
			<generator class="identity" />
		</id>
		<property column="fecha" name="fecha" type="LocalDate" />

		<!-- relacion mucho a 1 con Persona -->
		<many-to-one name="persona" class="datos.Persona" column="idPersona"
			not-null="true" />

		<!-- herencia ( solo se mapea la superclase ) -->
		<joined-subclass name="datos.Presencial" table="turno_presencial">
			<key column="idTurno" />
			<property column="ubicacion" name="ubicacion" type="string" />
		</joined-subclass>

		<joined-subclass name="datos.Virtual" table="turno_virtual">
			<key column="idTurno" />
			<property column="link" name="link" type="string" />
		</joined-subclass>
	</class>
</hibernate-mapping>