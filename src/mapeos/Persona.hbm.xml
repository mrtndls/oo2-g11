<hibernate-mapping>
	<class name="datos.Persona" table="persona">
		<id column="idPersona" name="idPersona">
			<generator class="identity" />
		</id>
		<property column="nombre" name="nombre" type="string" />
		<property column="apellido" name="apellido" type="string" />
		<property column="dni" name="dni" type="int" />
		<property column="fechaDeNacimiento" name="fechaDeNacimiento"
			type="LocalDate" />
		<property column="baja" name="baja" type="boolean" />

		<!-- relacion 1-1 con Contacto -->
		<one-to-one name="contacto" class="datos.Contacto" />

		<!-- relacion 1 a muchos con Turno -->
		<set name="turnos" table="turno" order-by="idTurno asc"
			inverse="true" lazy="true" fetch="select">
			<key column="idPersona" not-null="true" />
			<one-to-many class="datos.Turno" />
		</set>

		<!-- relacion muchos a muchos con Servicio -->
		<set table="persona_servicio" name="servicios" outer-join="true">
			<key column="idPersona" />
			<many-to-many column="idServicio" class="datos.Servicio" />
		</set>
	</class>
</hibernate-mapping>